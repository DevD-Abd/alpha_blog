


<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm border-0">
        <div class="card-body">
        <%= render 'shared/errors', obj: @article %>
          <%= form_with(model: @article, local: true, data: { turbo: false }) do |form| %>
            <div class="mb-3">
              <%= form.label :title, class: "form-label fw-semibold" %>
              <%= form.text_field :title, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= form.label :description, class: "form-label fw-semibold" %>
              <%= form.text_area :description, class: "form-control", rows: 5 %>
            </div>
            
            <div class="mb-3">
              <%= form.label :category_ids, class: "form-label fw-semibold" do %>
                Categories <span class="text-danger">*</span>
              <% end %>
              <div class="border rounded p-3 bg-light">
                <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                  <div class="form-check">
                    <%= cb.check_box(class: "form-check-input") %>
                    <%= cb.label(class: "form-check-label") { cb.text.capitalize } %>
                  </div>
                <% end %>
              </div>
              <small class="form-text text-muted">
                <span class="text-danger">*</span> Required - Select at least one category for this article
              </small>
            </div>
            <div class="d-flex justify-content-end gap-2">
              <%= form.submit class: "btn btn-outline-info px-4" %>
              <%= link_to "Back", articles_path, class: "btn btn-outline-secondary px-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>