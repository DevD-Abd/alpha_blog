<%# signup form %>
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-0">
        <div class="card-body">
          <%= render 'shared/errors', obj: @user %>
          <%= form_with(model: @user, local: true) do |form| %>
            <div class="mb-3">
              <%= form.label :username, class: "form-label fw-semibold" %>
              <%= form.text_field :username, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= form.label :email, class: "form-label fw-semibold" %>
              <%= form.email_field :email, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= form.label :password, class: "form-label fw-semibold" %>
              <%= form.password_field :password, class: "form-control" %>
            </div>
            <div class="d-flex justify-content-end gap-2">
              <%= form.submit "Sign Up", class: "btn btn-outline-info px-4" %>
              <%= link_to "Back", root_path, class: "btn btn-outline-secondary px-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>